<Window x:Class="DatabaseCRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseCRUD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" Margin="29,23,0,0" VerticalAlignment="Top" Height="35" Width="91" Click="btnGo_Click"/>
        <ListBox x:Name="lstToys" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="208,0,0,0" SelectionChanged="ListBox_SelectionChanged"/>

    </Grid>
</Window>
