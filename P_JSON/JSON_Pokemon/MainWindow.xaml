<Window x:Class="JSON_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboPokemon" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblPokemon" Content="Select a Pokemon" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Image x:Name="imgPokemon" HorizontalAlignment="Left" Height="318" Margin="10,90,0,0" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="btnSelect" Content="Show Pokemon!" HorizontalAlignment="Left" Margin="176,36,0,0" VerticalAlignment="Top" Click="btnSelect_Click"/>

    </Grid>
</Window>
