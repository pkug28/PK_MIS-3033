        xmlns:local="clr-namespace:JSON_GoT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnQuote" Content="Generate Quote!" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Height="58" Width="148" Click="btnQuote_Click"/>
        <TextBox x:Name="quotebox" HorizontalAlignment="Center" Margin="0,248,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="780" Height="176" FontSize="36" TextAlignment="Center"/>

    </Grid>
